<Context path="/" reloadable="true">

  <Resource name="jdbc/jetrix"
            auth="Container"
            type="javax.sql.DataSource"
            maxActive="20"
            maxIdle="5"
            maxWait="10000"
            testOnBorrow="true"
            validationQuery="SELECT 1 FROM DUAL"
            username="jetrix"
            password="jetrix"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/jetrix?autoReconnect=true"/>

</Context>
        